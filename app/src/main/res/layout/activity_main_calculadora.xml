<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainCalculadora">

    <Button
            android:text="/"
            android:background ="@android:color/holo_orange_dark"
            android:layout_width="65dp"
            android:layout_height="49dp"
            android:id="@+id/division" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="292dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintHorizontal_bias="0.052" android:layout_marginTop="232dp"
            app:layout_constraintTop_toBottomOf="@+id/campo1"/>
    <Button
            android:text="Borrar"
            android:background ="@android:color/holo_orange_dark"
            android:layout_width="82dp"
            android:layout_height="43dp"
            android:id="@+id/borrar" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="204dp" android:layout_marginTop="236dp"
            app:layout_constraintTop_toBottomOf="@+id/campo1"/>
    <Button
            android:text="result"
            android:background ="@android:color/holo_orange_dark"
            android:layout_width="76dp"
            android:layout_height="48dp"
            android:id="@+id/result" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="116dp" android:layout_marginTop="232dp"
            app:layout_constraintTop_toBottomOf="@+id/campo1"/>
    <Button
            android:text="0"
            android:layout_width="65dp"
            android:layout_height="49dp"
            android:id="@+id/cero" app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="32dp"
            android:layout_marginTop="232dp" app:layout_constraintTop_toBottomOf="@+id/campo1"/>
    <Button
            android:text="*"
            android:background ="@android:color/holo_orange_dark"
            android:layout_width="65dp"
            android:layout_height="49dp"
            android:id="@+id/multiplicacion" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="292dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintHorizontal_bias="0.052" android:layout_marginTop="164dp"
            app:layout_constraintTop_toBottomOf="@+id/campo1"/>
    <TextView
            android:text="CALCULADORA"
            android:layout_width="172dp"
            android:layout_height="39dp"
            android:id="@+id/titulo" app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            tools:layout_editor_absoluteY="16dp" android:textSize="24sp"/>

    <TextView
            android:id="@+id/campo2"
            android:layout_width="124dp"
            android:layout_height="30dp"
            android:layout_marginTop="68dp"
            android:layout_marginEnd="64dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    <TextView
            android:id="@+id/campo1"
            android:layout_width="126dp"
            android:layout_height="31dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="28dp"
            android:layout_marginEnd="60dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.99"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/campo2" />

    <Button
            android:text="7"
            android:layout_width="65dp"
            android:layout_height="49dp"
            android:id="@+id/siete" app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="32dp"
            android:layout_marginTop="24dp" app:layout_constraintTop_toBottomOf="@+id/campo1"/>
    <Button
            android:text="5"
            android:layout_width="65dp"
            android:layout_height="49dp"
            android:id="@+id/cinco" app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="116dp"
            android:layout_marginTop="100dp" app:layout_constraintTop_toBottomOf="@+id/campo1"/>
    <Button
            android:text="4"
            android:layout_width="65dp"
            android:layout_height="49dp"
            android:id="@+id/cuatro" app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="32dp"
            app:layout_constraintEnd_toStartOf="@+id/cinco" android:layout_marginEnd="8dp"
            app:layout_constraintHorizontal_bias="0.0" android:layout_marginTop="100dp"
            app:layout_constraintTop_toBottomOf="@+id/campo1"/>
    <Button
            android:text="+"
            android:background ="@android:color/holo_orange_dark"
            android:layout_width="65dp"
            android:layout_height="49dp"
            android:id="@+id/suma" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintStart_toEndOf="@+id/nueve" android:layout_marginStart="8dp"
            android:layout_marginTop="24dp" app:layout_constraintTop_toBottomOf="@+id/campo1"
            app:layout_constraintHorizontal_bias="0.357"/>
    <Button
            android:text="8"
            android:layout_width="67dp"
            android:layout_height="48dp"
            android:id="@+id/ocho" app:layout_constraintStart_toEndOf="@+id/siete"
            android:layout_marginStart="20dp" android:layout_marginTop="24dp"
            app:layout_constraintTop_toBottomOf="@+id/campo1"/>
    <Button
            android:text="9"
            android:layout_width="63dp"
            android:layout_height="49dp"
            android:id="@+id/nueve" app:layout_constraintStart_toEndOf="@+id/ocho"
            android:layout_marginStart="28dp" android:layout_marginTop="24dp"
            app:layout_constraintTop_toBottomOf="@+id/campo1"/>
    <Button
            android:text="6"
            android:layout_width="65dp"
            android:layout_height="49dp"
            android:id="@+id/seis" app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="204dp"
            android:layout_marginTop="100dp" app:layout_constraintTop_toBottomOf="@+id/campo1"/>
    <Button
            android:text="-"
            android:background ="@android:color/holo_orange_dark"
            android:layout_width="65dp"
            android:layout_height="49dp"
            android:id="@+id/resta" app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="292dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintHorizontal_bias="0.052" android:layout_marginTop="100dp"
            app:layout_constraintTop_toBottomOf="@+id/campo1"/>
    <Button
            android:text="1"
            android:layout_width="65dp"
            android:layout_height="49dp"
            android:id="@+id/uno" app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="32dp"
            android:layout_marginTop="164dp" app:layout_constraintTop_toBottomOf="@+id/campo1"/>
    <Button
            android:text="2"
            android:layout_width="65dp"
            android:layout_height="49dp"
            android:id="@+id/dos" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="116dp" android:layout_marginTop="164dp"
            app:layout_constraintTop_toBottomOf="@+id/campo1"/>
    <Button
            android:text="3"
            android:layout_width="65dp"
            android:layout_height="49dp"
            android:id="@+id/tres" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="208dp" android:layout_marginTop="164dp"
            app:layout_constraintTop_toBottomOf="@+id/campo1"/>
</android.support.constraint.ConstraintLayout>